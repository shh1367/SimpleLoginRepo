<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".ActivitySentCode">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:layout_weight="2"
        android:src="@drawable/_0824340_6374583" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/enter_sent_code"
            android:textColor="@color/light"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/phone_edt_login"
            android:drawableRight="@drawable/baseline_sms_24"
            android:hint="XXXXXX"
            android:inputType="number"
            android:layoutDirection="ltr"
            android:maxLength="11"
            android:padding="15dp"
            android:textSize="15sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/login_btn"
            android:text="تایید"
            android:textColor="@color/light"
            android:textSize="20dp"/>

        <androidx.appcompat.widget.AppCompatTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_count_time"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="60"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/light"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_resend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/btn_resend_code"
            android:text="ارسال مجدد"
            android:textColor="@color/light"
            android:textSize="20dp"
            android:visibility="gone"/>



    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>